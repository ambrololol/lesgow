<!DOCTYPE html>
<html>
  <head>
    <title> Kamrol Les Abadi | Login </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <%- include('../partials/inc/style') %>
  </head>
  <body class="hold-transition login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href="#"><b>LMS</b></a>
      </div>
      <!-- /.login-logo -->
      <div class="card">
        <div class="card-body login-card-body">
          <p class="login-box-msg">Register</p>

          <form id="register_form">
            <div class="input-group mb-3">
              <input id="email" name="email" type="email" class="form-control" placeholder="Email" />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input id="fullname" name="fullname" type="text" class="form-control" placeholder="Full Name" />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input id="phone" name="phone" type="text" class="form-control" placeholder="Phone" />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-phone"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <textarea id="address" name="address" class="form-control" rows="3" placeholder="Address" style="resize: none;"></textarea>
              <!-- <input type="text" class="form-control" placeholder="Address" /> -->
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-home"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <select class="form-control" id="gender" name="gender">
                <option value="" selected disabled>Choose your gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-venus-mars"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input id="password" name="password" type="password" class="form-control" placeholder="Password" />
              <div class="input-group-append" onclick="showPassword()">
                <div class="input-group-text">
                  <span id="icon_password" class="fas fa-eye"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                id="confirm_password" name="confirm_password"
                type="password"
                class="form-control"
                placeholder="Confirm Password"
              />
              <div class="input-group-append" onclick="showPasswordConf()">
                <div class="input-group-text">
                  <span id="icon_confirm_password" class="fas fa-eye"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <button type="submit" class="btn btn-primary btn-block">
                  Register
                </button>
              </div>
              <!-- /.col -->
            </div>
          </form>
   
  </body>
  <script src="/plugins/jquery/jquery.min.js"></script>
  <script>
    function showPassword(){
        if($("#password").attr("type") == "password"){
          $("#icon_password").attr("class","fas fa-eye-slash")
          $("#password").attr("type","text")
        }else{
          $("#icon_password").attr("class","fas fa-eye")
          $("#password").attr("type","password")
        }
    }

    function showPasswordConf(){
      if($("#confirm_password").attr("type") == "password"){
          $("#icon_confirm_password").attr("class","fas fa-eye-slash")
          $("#confirm_password").attr("type","text")
        }else{
          $("#icon_confirm_password").attr("class","fas fa-eye")
          $("#confirm_password").attr("type","password")
        }
    }

    $("#register_form").submit(function(e){
      e.preventDefault()
      const data = new FormData(event.target);
      const value = Object.fromEntries(data.entries());
      
      $.ajax({
        type: "POST",
        url: "/auth/register",
        data: value,
        success: function(res){
          alert(res.message)
          if(res.status == "SUCCESS"){
            window.location.href = '/auth/login'
          }
        }
      });
    })
  </script>
</html>


